<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyConverter"
        mc:Ignorable="d" Title="Конвертер валют" SizeToContent="Height" Width="1280" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="250" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="У меня есть" />
        <TextBlock Grid.Column="4" Text="Хочу приобрести" />

        <ComboBox Name="SellCmb" Grid.Row="2" DisplayMemberPath="Name"/>
        <ComboBox Name="PurchaseCmb" Grid.Row="2" Grid.Column="4" DisplayMemberPath="Name"/>

        <Border Grid.Row="4" BorderThickness="2" BorderBrush="LightGray">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBox Name="SellTb" Text="5000500000" FontSize="80" FontWeight="Bold" MaxLength="10" />
                <TextBlock Name="SellTbl" Grid.Row="2" Text="1 RUR = 0.0098 USD" />
            </Grid>
        </Border>

        <Border Grid.Row="4" Grid.Column="4" BorderThickness="2" BorderBrush="LightGray">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBox Name="BuyTb" Text="5000500000" FontSize="80" FontWeight="Bold" MaxLength="10" />
                <TextBlock Name="BuyTbl" Grid.Row="2" Text="1 RUR = 0.0098 USD" />
            </Grid>
        </Border>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button Name="UpdateCourseBtn" Content="Обновить" Click="UpdateCourseBtn_Click" />

            <Button Name="ConvertBtn" Grid.Column="2" Content="Конвертировать" Click="ConvertBtn_Click" />
        </Grid>

        <ListView Name="CurrencyLv" Grid.Row="8" Grid.ColumnSpan="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="Цифровой код" DisplayMemberBinding="{Binding NumCode}" />
                    <GridViewColumn Header="Символьный код" DisplayMemberBinding="{Binding CharCode}" />
                    <GridViewColumn Header="Номинал" DisplayMemberBinding="{Binding Nominal}" />
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Value}" />
                    <GridViewColumn Header="Пред. цена" DisplayMemberBinding="{Binding Previous}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

